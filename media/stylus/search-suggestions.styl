@require 'includes/vars';
@require 'includes/mixins';

.home-search-form {
    position: relative;
}

.search-form {
    .search-filter-wrapper {
        big-search();
        cursor: text;
        padding: $input-padding;
        position: relative;
        background-color: #fff;
    }

    #home-q {
        border: none;
        display: inline;
        padding: 0;
        outline: none;
    }

    .show-topics {
        background-color: rgba-fallback(rgba(255, 255, 255, 0)) !important;
        box-shadow: none;
        color: $text-color !important;
        font-size: 1.2em !important;
        position: absolute;
        right: 0;
        top: 3px;
     }

    .suggestions {
        big-search();
        border-radius: 0px;
        color: #fff;
        max-height: 300px;
        overflow-y: scroll;
        padding: $input-padding; /* Give the suggestions list the same width as the search box */

        ul {
            margin-bottom: 20px;
            &:last-child {
                margin-bottom: 0;
            }
        }

        strong, li a.search-ss {
            padding: 0 10px;
        }

        strong {
            text-transform: uppercase;
        }

        li {
            a.search-ss {
                display: block;
                color: #fff;

                &:hover,
                &:focus,
                &.selected {
                    background: $homepage-background-color;
                    color: #fff !important;
                    text-decoration: none;
                }

                span {
                    float: right;
                }
            } /* end a.search-ss */
        } /* end li */
    } /* end .suggestions */

    .filter-arrow {
        display: none;
        margin: 0 3px;

        {$selector-icon} {
            margin: 0px !important;
            vertical-align: bottom;

            &:before {
                cursor: pointer !important;
            }
        }
    } /* end .filter-arrow */

    .filters {
        display: inline-block;
        max-width: 70%;
        overflow-y: hidden;
        vertical-align: top;
        white-space: nowrap;

        span.topic {
            display: inline;
            background-color: $homepage-background-color !important;
            box-shadow: none;
            color: #fff!important;
            cursor: default!important;
            margin-right: 5px;
            padding: 3px 11px 3px 17px !important;
            text-transform: none !important;

            button.close {
                background-color: transparent !important;
                box-shadow: none;
                color: #fff!important;
                margin-left: 5px;
                padding: 5px 0px 5px 5px !important

                {$selector-icon} {
                    margin-left: 0;
                }
            } /* end button.close */
        } /* end span.topic */
    } /* end .filters */

    &.dark {
        .suggestions {
            background-color: #fff;
        }

        #home-q, .show-topics, .suggestions, .suggestions li a {
            color: #4d4e53 !important;
        }
    }

} /* end .search-form */

@-webkit-keyframes openNotification {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}
@keyframes openNotification {
    from {
        margin-top: -115px;
        opacity: 0;
    }
    to {
        margin-top: 0px;
        opacity: 1;
    }
}
